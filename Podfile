platform:ios, '13.0'
use_frameworks!

def basePods
  pod 'Factory'
  pod 'RxSwift'
  pod 'RxDataSources'
  pod 'Moya'
end

target 'VIPER' do
  basePods
  pod 'SnapKit'
end

target 'Authentication' do
  basePods
end

target 'BaseView' do
  basePods
  # 上下拉刷新
  pod 'KafkaRefresh'
  # EmptyDataSet
  pod 'EmptyDataSet-Swift'
end

target 'Bindable' do
  basePods
end

target 'RxExtension' do
  pod 'RxSwift'
  pod 'RxCocoa'
end

target 'Mediator' do
  pod 'Factory'
end
